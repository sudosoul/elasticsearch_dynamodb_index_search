{
  "settings": {
    "index": {
      "number_of_shards": 2,
      "number_of_replicas": 2,
      "shard": {
        "check_on_startup": true
      },
      "routing_partition_size": 1,
      "auto_expand_replicas": "0-all"
    },
    "analysis": {
      "analyzer": {
        "nGram_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "asciifolding",
            "nGram_filter"
          ]
        },
        "standard_stopwords-en": {
          "type": "standard",
          "stopwords": "_english_"
        }
      },
      "filter": {
        "nGram_filter": {
          "type": "nGram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [
            "letter",
            "digit",
            "punctuation",
            "symbol"
          ]
        }
      }
    }
  },
  "mappings": {
    "videos": {
      "properties": {
        "title": {
          "type": "text", 
          "analyzer": "nGram_analyzer",
          "search_analyzer": "standard_stopwords-en"
        },
        "type": {
          "type": "keyword"
        },
        "description": {
          "type": "text",
          "analyzer": "nGram_analyzer",
          "search_analyzer": "standard_stopwords-en"
        },
        "primaryCategory": {
          "type": "keyword",
          "analyzer": "nGram_analyzer",
          "search_analyzer": "standard_stopwords-en"
        },
        "categories": {
          "type": "nested",  
          "properties": {
            "name": {
              "type": "text",
              "analyzer": "nGram_analyzer",
              "search_analyzer": "standard_stopwords-en"
            }
          }
        },
        "people": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text",
              "analyzer": "nGram_analyzer",
              "search_analyzer": "standard_stopwords-en"
            }
          }
        },
        "tags": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text",
              "analyzer": "nGram_analyzer",
              "search_analyzer": "standard_stopwords-en"
            }
          }
        },
        "status": {
          "type": "keyword"
        },
        "isTrailer": {
          "type": "keyword"
        },
        "free": {
          "type": "keyword"
        },
        "year": {
          "type": "keyword"
        },
        "parentalRating": {
          "type": "keyword"
        },      
        "gist": {
          "index": "no"
        }
      }
    }
  }
}
