{
  "settings": {
    "index": {
      "number_of_shards": 2,
      "number_of_replicas": 2,
      "shard": {
        "check_on_startup": true
      },
      "routing_partition_size": 1,
      "auto_expand_replicas": "0-all"
    },
    "analysis": {
      "analyzer": {
        "standard_stopwords-en": {
          "type": "standard",
          "stopwords": "_english_"
        }
      }
    }
  },
  "mappings": {
    "videos": {
      "dynamic_templates": [
        {
          "dont_index_gist": {
            "path_match": "data",
            "mapping": {
              "index": "no"
            }
          }
        }
      ],
      "properties": {
        "suggestTitle": {
          "type": "completion",
          "preserve_separators": false,
          "contexts": [
            {
              "name": "status",
              "type": "category",
              "path": "status"
            },
            {
              "name": "categories",
              "type": "category",
              "path": "categories"
            },
            {
              "name": "free",
              "type": "category",
              "path": "free"
            },
            {
              "name": "year",
              "type": "category",
              "path": "year"
            }
          ]
        },
        "title": {
          "type": "text", 
          "analyzer": "standard_stopwords-en"
        },
        "type": {
          "type": "keyword"
        },
        "description": {
          "type": "text",
          "analyzer": "standard_stopwords-en"
        },
        "primaryCategory": {
          "type": "keyword"
        },
        "categories": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text"
            }
          }
        },
        "tags": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text"
            }
          }
        },
        "status": {
          "type": "keyword"
        },
        "isTrailer": {
          "type": "keyword"
        },
        "free": {
          "type": "keyword"
        },
        "year": {
          "type": "keyword"
        },
        "parentalRating": {
          "type": "keyword"
        },
        "people": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text"
            }
          }
        }
      }
    },
    "people": {
      "properties": {
        "suggestName": {
          "type": "completion"
        },
        "name": {
          "type": "text"
        }
      }
    }
  }
}