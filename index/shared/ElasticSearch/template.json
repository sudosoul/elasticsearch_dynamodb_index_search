{
  "settings": {
    "index": {
      "number_of_shards": 2,
      "number_of_replicas": 2,
      "shard": {
        "check_on_startup": true
      },
      "routing_partition_size": 1,
      "auto_expand_replicas": "0-all"
    },
    "analysis": {
      "analyzer": {
        "standard_stopwords-en": {
          "type": "standard",
          "stopwords": "_english_"
        }
      }
    }
  },
  "mappings": {
    "videos": {
      "dynamic_templates": [
        {
          "dont_index_gist": {
            "path_match": "gist",
            "mapping": {
              "index": "no"
            }
          }
        }
      ],
      "properties": {
        "suggest-title": {
          "type": "completion",
          "preserve_separators": false,
          "contexts": [
            {
              "name": "status",
              "type": "category",
              "path": "status"
            },
            {
              "name": "categories",
              "type": "category",
              "path": "categories"
            }
          ]
        },
        "title": {
          "type": "string", 
          "analyzer": "standard_stopwords-en"
          }
        },
        "type": {
          "type": "keyword"
        },
        "description": {
          "type": "text",
          "analyzer": "standard_stopwords-en"
        },
        "status": {
          "type": "text"
        },
        "isTrailer": {
          "type": "boolean"
        },
        "free": {
          "type": "boolean"
        },
        "year": {
          "type": "keyword"
        },
        "parentalRating": {
          "type": "keyword"
        }
      }
    },
}