{
  "settings": {
    "index": {
      "number_of_shards": 2,
      "number_of_replicas": 2,
      "shard": {
        "check_on_startup": true
      },
      "routing_partition_size": 1,
      "auto_expand_replicas": "0-all"
    },
    "analysis": {
      "analyzer": {
        "nGram_analyzer": {
          "type": "custom",
          "tokenizer": "nGram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "standard_stopwords-en": {
          "type": "standard",
          "stopwords": "_english_"
        }
      },
      "tokenizer": {
        "nGram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
